                    </ul>


                {%- endif -%}

                {%- if menu_block.settings.menu.handle == "footer-contact" -%}
                    <ul class="footer-contact-desktop hidden md:block"
                        x-data="{ listHoverId : null }">
                        {% for link in menu_block.settings.menu.links -%}
