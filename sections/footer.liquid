    </section>

    <section class="px-[23px] md:p-[20px] md:pb-[40px] lg:p-[30px] flex-1 md:w-3/12">
        <article
                x-intersect="$el.classList.add('!opacity-100')"
                class="flex flex-col delay-[600ms] justify-between flex-1 h-full transition-opacity duration-700 ease-in-out delay-200 opacity-0">


            <ul
                    class="block md:hidden lg:block"
                    x-data="{ listHoverId : null }"
            >
                <li
                        :class="{ '!opacity-100': listHoverId != null && listHoverId === 1 || listHoverId === null, 'opacity-50': listHoverId != null}"
                        class="transition-opacity duration-300 ease-e"
                >
                    <a
                            @mouseover="listHoverId = 1"
                            @mouseleave="listHoverId = null"
                            href="/pages/support"
                    >
                        Support</a></li>
                <li
                        :class="{ '!opacity-100': listHoverId != null && listHoverId === 2 || listHoverId === null, 'opacity-50': listHoverId != null}"
                        class="transition-opacity duration-300 ease-e"
                >
                    {% if customer %}
                        <a @mouseover="listHoverId = 2" @mouseleave="listHoverId = null" class="cursor-pointer"
                           href="/account">Account</a>
                    {% else %}
                        <a @mouseover="listHoverId = 2" @mouseleave="listHoverId = null" class="cursor-pointer"
                           href="/account">Account</a>
