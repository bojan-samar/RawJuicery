                            x-data="{ listHoverId : null }">

                        {% for link in menu_block.settings.menu.links -%}

                            <li :class="{ '!opacity-100': listHoverId != null && listHoverId === {{ forloop.index }} || listHoverId === null, 'opacity-50': listHoverId != null}"
